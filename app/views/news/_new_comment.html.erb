<div class="new mt">
  <%= form_with url: 'create_comment' do |f| %>
    <p><%= f.label :comment_body, "Write your comment" %></p>
    <p><%= f.text_field :comment_body %></p>
    <p><%= f.label :new_id, "New's id" %></p>
    <p><%= f.text_field :new_id %></p>
    <p class="mt"><%= f.submit "Write" %></p>
  <% end %>
</div>